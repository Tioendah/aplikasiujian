<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Adapter.Adapter_MapelUjian">
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardElevation="5dp"
        android:id="@+id/cardmapel"
        android:layout_margin="3dp"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mata Pelajaran"
                    android:textSize="18sp"
                    android:fontFamily="@font/interfacemedium"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bahasa Indonesia "
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sanserif"
                    android:id="@+id/nMapel"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guru "
                    android:textSize="18sp"
                    android:fontFamily="@font/interfacemedium"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/interfacemedium"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:text="Muhammad Budi Prasetio"
                    android:id="@+id/nGuru"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_status"
                    android:visibility="gone"
                    android:src="@drawable/icon_done"/>
            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>