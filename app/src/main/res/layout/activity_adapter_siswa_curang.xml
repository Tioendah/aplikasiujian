<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    tools:context=".Adapter.Adapter_Berita">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="3dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="85dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                tools:ignore="UselessParent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/interfacemedium"
                    android:text="Nama :"
                    android:id="@+id/tx_nama_siswacurang"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/interfacemedium"
                    android:text="Riffat Sungkar"
                    android:id="@+id/nama_siswacurang"
                    android:layout_toEndOf="@+id/tx_nama_siswacurang"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                tools:ignore="UselessParent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/interfacemedium"
                    android:text="Kelas :"
                    android:id="@+id/tx_kelas_siswacurang"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/interfacemedium"
                    android:text="Riffat Sungkar"
                    android:id="@+id/kelas_siswacurang"
                    android:layout_toEndOf="@+id/tx_kelas_siswacurang"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                tools:ignore="UselessParent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/interfacemedium"
                    android:text="Mapel :"
                    android:id="@+id/tx_mapel_siswacurang"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/interfacemedium"
                    android:text="Riffat Sungkar"
                    android:id="@+id/mapel_siswacurang"
                    android:layout_toEndOf="@+id/tx_mapel_siswacurang"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                tools:ignore="UselessParent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/interfacemedium"
                    android:text="Guru :"
                    android:id="@+id/tx_guru_siswacurang"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/interfacemedium"
                    android:text="Riffat Sungkar"
                    android:id="@+id/guru_siswacurang"
                    android:layout_toEndOf="@+id/tx_guru_siswacurang"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                tools:ignore="UselessParent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/interfacemedium"
                    android:text="Waktu :"
                    android:id="@+id/tx_waktu_siswacurang"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/interfacemedium"
                    android:text="Riffat Sungkar"
                    android:id="@+id/waktu_siswacurang"
                    android:layout_toEndOf="@+id/tx_waktu_siswacurang"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                tools:ignore="UselessParent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/interfacemedium"
                    android:text="Kategori :"
                    android:id="@+id/tx_kategori_siswacurang"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/interfacemedium"
                    android:text="Riffat Sungkar"
                    android:id="@+id/kategori_siswacurang"
                    android:layout_toEndOf="@+id/tx_kategori_siswacurang"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
        </LinearLayout>





    </androidx.cardview.widget.CardView>
</RelativeLayout>