<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    tools:context=".Ui.RekapAbsen.Pdf.Pdf_Activity">

    <TextView
        android:id="@+id/pdfrekapabsen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/interfacemedium"
        android:text="@string/rekap_absen"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/viewLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/pdfrekapabsen"
        tools:layout_editor_absoluteX="10dp">

        <TextView

            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/table_content_cell_bg"
            android:text="@string/no"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@color/black"
            tools:ignore="SmallSp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/table_content_cell_bg"
            android:text="Minggu"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="SmallSp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/table_content_cell_bg"
            android:text="21-02-2022"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="SmallSp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/table_content_cell_bg"
            android:text="10.18"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/table_content_cell_bg"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:visibility="gone"
            tools:ignore="SmallSp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/table_content_cell_bg"
            android:text="@string/pulang"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/table_content_cell_bg"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:visibility="gone"
            tools:ignore="SmallSp" />


        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/pulang"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:visibility="gone" />

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_pdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/viewLinear" />
</androidx.constraintlayout.widget.ConstraintLayout>