<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_height="match_parent"
    tools:context=".Ui.Create_Member">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:fontFamily="@font/interfacemedium"
                    android:text="Formulir Pendaftaran \n Member Perpustakaan \nMTsN 3 Rokan Hulu"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="@string/member_id"
                        android:textSize="15sp"
                        android:layout_marginStart="7dp"
                        android:layout_marginEnd="7dp"
                        android:fontFamily="@font/interfacemedium"
                        android:id="@+id/cm_memberid"
                        />

                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="7dp"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/namalengkap">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/cm_member_name"
                        android:textSize="15sp"
                        android:layout_marginStart="7dp"
                        android:layout_marginEnd="7dp"
                        android:fontFamily="@font/interfacemedium"
                        android:layout_height="wrap_content"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginTop="7dp"
                app:cardCornerRadius="100dp"
                app:cardElevation="3dp">

                <Spinner
                    android:id="@+id/cm_gender"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingStart="10dp"
                    android:prompt="@string/hari" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                app:cardCornerRadius="100dp"
                android:layout_marginTop="7dp"
                app:cardElevation="3dp">
<!--                kategori-->
                <Spinner
                    android:id="@+id/cm_member_type_id"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingStart="10dp"
                    android:prompt="@string/hari" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nomor Handphone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/cm_pin"
                        android:textSize="15sp"
                        android:layout_marginStart="7dp"
                        android:layout_marginEnd="7dp"
                        android:inputType="number"
                        android:fontFamily="@font/interfacemedium"
                        android:layout_height="wrap_content"
                        android:focusable="true" />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="7dp"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/nomor_orang_tua">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/cm_member_phone"
                        android:textSize="15sp"
                        android:layout_marginStart="7dp"
                        android:inputType="number"
                        android:layout_marginEnd="7dp"
                        android:fontFamily="@font/interfacemedium"
                        android:layout_height="wrap_content"
                        android:focusable="true" />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textSize="15sp"
                    android:layout_marginStart="7dp"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="7dp"
                    android:fontFamily="@font/interfacemedium"
                    android:text="Password : 'akasia'"/>
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/cm_btn"
                    style="@style/Font_family_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/login_button"
                    android:text="@string/simpan"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>