<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:orientation="vertical"
android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="7dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:text="2123421"
            android:textColor="@color/black"
            android:fontFamily="@font/interfacemedium"
            android:id="@+id/cp_pinmasuk"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/copy"
            android:id="@+id/iv_masuk"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/cp_pinmasuk"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="7dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2123421"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:fontFamily="@font/interfacemedium"
            android:id="@+id/cp_out"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/iv_out"
            android:src="@drawable/copy"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/cp_out"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="7dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2123421"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:fontFamily="@font/interfacemedium"
            android:id="@+id/cp_pinexit"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/copy"
            android:layout_marginStart="10dp"
            android:id="@+id/iv_exit"
            android:layout_toRightOf="@+id/cp_pinexit"/>
    </RelativeLayout>

</LinearLayout>
