<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="58.0dip"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:id="@+id/br_ppdb"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_homeppdb"
            android:layout_width="36dp"
            android:layout_height="36.0dip"
            android:scaleType="fitCenter"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_home_white_24dp"
            android:contentDescription="@string/todo"
            />
        <ImageView
            android:id="@+id/img_backppdb"
            android:layout_width="36dp"
            android:layout_height="36.0dip"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/img_homeppdb"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_navigate_before_24"
            android:contentDescription="@string/todo" />


        <ImageView
            android:id="@+id/img_nextppdb"
            android:layout_width="40dp"
            android:layout_height="36.0dip"
            android:layout_marginStart="7dp"
            android:layout_toEndOf="@+id/img_backppdb"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_navigate_next_24"
            tools:ignore="ContentDescription" />

    </RelativeLayout>




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:id="@+id/login">


        <ImageView
            android:id="@+id/img_keyboardppdb"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/img_unduh"
            android:layout_marginEnd="20dp"
            android:src="@drawable/baseline_keyboard_hide_24" />


        <ImageView
            android:id="@+id/img_unduh"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/download" />


    </RelativeLayout>

</LinearLayout>