<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Ui.Perangkat_Pembelajaran">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/perangkat_pembelajaran"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/sanserif"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mts_negeri_3_rokan_hulu"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/interfacemedium"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        tools:listitem="@layout/activity_adapter_pr_pembelajaran"
        android:id="@+id/rc_perangkat_pembelajaran"/>
</LinearLayout>