<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:layout_gravity="center"
    tools:context="com.tioprasetioa.www.mtsn3rohul.com.tioprasetio36.www.mtsn3rohul.RekapAbsen.MainActivityo">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/gagal"
        android:visibility="gone"
        android:id="@+id/valueDeleteAll"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/sanserif"
                    android:text="@string/sudah_absen_nhari_ini"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/profildb"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/finger_print" />

                <TextView
                    android:id="@+id/id_db"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profildb"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/interfacemedium"
                    android:paddingEnd="15dp"
                    android:text="@string/belum_login"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:cardBackgroundColor="#EEEEEE"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        app:cardCornerRadius="100dp"
                        app:cardElevation="3dp">

                        <Spinner
                            android:id="@+id/hari"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:paddingStart="10dp"
                            android:prompt="@string/hari" />
                    </androidx.cardview.widget.CardView>

                    <EditText
                        android:id="@+id/id_tgl"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/edittext_rekapabsen"
                        android:clickable="true"
                        android:drawableStart="@drawable/ic_baseline_date_range_24"
                        android:drawablePadding="10dp"
                        android:editable="false"
                        android:fontFamily="@font/interfacemedium"
                        android:hint="Tanggal"
                        android:paddingLeft="10dp"
                        android:textSize="15sp"
                        tools:ignore="Deprecated,HardcodedText" />

                    <EditText
                        android:id="@+id/etMasuk"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/edittext_rekapabsen"
                        android:clickable="true"
                        android:drawableStart="@drawable/ic_baseline_access_time_24"
                        android:drawablePadding="10dp"
                        android:editable="false"
                        android:hint="Absen Masuk"
                        android:paddingStart="10dp"
                        android:textSize="15sp"
                        tools:ignore="Deprecated,HardcodedText" />

                    <EditText
                        android:id="@+id/etPulang"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/edittext_rekapabsen"
                        android:drawableStart="@drawable/ic_baseline_access_time_24"
                        android:hint="  Absen Masuk"
                        android:textSize="15sp"
                        android:visibility="gone"
                        tools:ignore="Deprecated,HardcodedText" />


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="100dp"
                        app:cardElevation="3dp">

                        <Button
                            android:id="@+id/btn_rekap"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/colorPrimary"
                            android:text="@string/lihat_rekap"
                            android:textColor="@color/white" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="100dp"
                        app:cardElevation="3dp">

                        <Button
                            android:id="@+id/btn_sendDt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/colorPrimary"
                            android:text="@string/simpan"
                            android:textColor="@color/white" />
                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/sanserif"
                        android:text="@string/setelah"
                        android:textAlignment="center"
                        android:textColor="@color/blue"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:weightSum="12">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="3"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="@string/mtsn_3_rohul"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="3"
                    android:background="@color/white" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>