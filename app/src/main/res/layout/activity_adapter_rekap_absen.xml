<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/no"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/table_content_cell_bg"
            android:text="@string/no"
            android:textAlignment="center"
            android:textSize="15sp"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/harirekap"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/table_content_cell_bg"
            android:text="Minggu"
            android:textSize="15sp"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/id_rekap"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/table_content_cell_bg"
            android:text="21-02-2022"
            android:textSize="15sp"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/id_masuk"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/table_content_cell_bg"
            android:text="10.18"
            android:textSize="15sp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/table_content_cell_bg"
            android:textSize="10sp"
            android:visibility="gone"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/id_pulang"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/table_content_cell_bg"
            android:text="@string/pulang"
            android:textSize="15sp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/table_content_cell_bg"
            android:textSize="15sp"
            android:visibility="gone"
            tools:ignore="SmallSp" />


        <TextView
            android:id="@+id/id_vdeletall"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/pulang"
            android:textSize="14sp"
            android:visibility="gone" />

    </LinearLayout>



</RelativeLayout>