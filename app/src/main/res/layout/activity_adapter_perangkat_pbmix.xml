<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:gl="http://schemas.android.com/apk/res-auto"
    android:layout_height="100dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_red"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/mapelix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/interfacemedium"
            android:text="@string/mapel"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/Url_perangkatpbmix"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/interfacemedium"
            android:text="@string/mapel"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBarix"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mapelix"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="4dp"
            android:progressTint="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progressBarix"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tx_perangkatpembajaranix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/interfacemedium"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/buttonix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/btn_corner"
                android:fontFamily="@font/interfacemedium"
                android:text="@string/start"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/buttonCancelix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/btn_corner"
                android:enabled="false"
                android:fontFamily="@font/interfacemedium"
                android:text="@string/cancel"
                android:textColor="@color/black" />


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>