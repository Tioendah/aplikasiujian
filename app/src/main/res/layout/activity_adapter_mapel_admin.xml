<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Adapter.Adapter_MapelUjian">
    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardElevation="5dp"
        android:layout_margin="3dp"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mata Pelajaran"
                    android:fontFamily="@font/interfacemedium"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bahasa Indonesia "
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sanserif"
                    android:id="@+id/nMapel_admin"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_alignParentBottom="true">
                <Button
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:id="@+id/btn_pause"
                    android:text="Belum Dimulai"
                    android:textSize="8dp"
                    android:layout_margin="2dp"
                    android:textAllCaps="false"
                    android:background="@drawable/green_button_background"/>
                <Button
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:id="@+id/btn_start"
                    android:layout_toRightOf="@+id/btn_pause"
                    android:text="Mulai \nUjian"
                    android:textSize="8dp"
                    android:layout_margin="2dp"
                    android:textAllCaps="false"
                    android:background="@drawable/green_button_background"/>
                <Button
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:id="@+id/btn_done"
                    android:text="Selesai \nUjian"
                    android:layout_toRightOf="@id/btn_start"
                    android:layout_margin="2dp"
                    android:textSize="8dp"
                    android:textAllCaps="false"
                    android:background="@drawable/green_button_background"/>
            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>