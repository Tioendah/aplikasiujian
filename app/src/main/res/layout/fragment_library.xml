<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context=".Fragment.Akun">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relativeLayoutlibrary"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/colorPrimary"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_libary"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_above="@+id/txkategori"
                    android:layout_marginBottom="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_default" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/etmember_id"
                    android:layout_alignLeft="@+id/etmember_id"
                    android:fontFamily="@font/interfacemedium"
                    android:text="@string/user_id"
                    android:textAllCaps="true"
                    android:textColor="@color/kuning"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/etmember_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/username"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/image_libary"
                    android:fontFamily="@font/interfacemedium"
                    android:text="@string/member_id"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/etmember_name"
                    android:layout_alignStart="@+id/etmember_id"
                    android:fontFamily="@font/interfacemedium"
                    android:text="@string/username"
                    android:textAllCaps="true"
                    android:textColor="@color/kuning"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/etmember_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/txkategori"
                    android:layout_alignStart="@id/etmember_id"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/interfacemedium"
                    android:text="@string/member_name"
                    android:textColor="@color/white"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/etmember_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kategori"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/member_since_date"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/interfacemedium"
                    android:text="@string/register"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/txgender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/member_since_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/interfacemedium"
                    android:text="@string/register"
                    android:textColor="@color/white"
                    android:textSize="15sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/member_since_date"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/interfacemedium"
                    android:text="@string/expired"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/etexpired"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="17dp"
                    android:fontFamily="@font/interfacemedium"
                    android:text="@string/since_data"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/txkategori"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/interfacemedium"
                    android:text="@string/kategori"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txkategori"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/interfacemedium"
                    android:text="@string/kategori"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <!--batas dari pinjamana-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/cardViewlibrary"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativeLayoutlibrary"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginTop="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/green"
                        android:fontFamily="@font/interfacemedium"
                        android:text="@string/pinjaman_saya_saat_ini"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:fontFamily="@font/proximanovaregular"
                            android:text="KODE \nBUKU"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TANGGAL \n PINJAM"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:textAlignment="center"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/black"
                            android:fontFamily="@font/proximanovaregular"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/proximanovaregular"
                            android:text="BATAS \n PENGEMBALIAN"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvmemberid"
                        android:visibility="gone"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycle_library"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"/>
                    <!--                tools:listitem="@layout/activity_adapter_tampi_data"-->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/geomotos"
                            android:id="@+id/tv_tidakadapinjaman"
                            android:visibility="gone"
                            android:outlineSpotShadowColor="@color/blue"
                            android:text="@string/tidakadapinjaman"
                            android:textColor="@color/black" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="02dp"
                        android:layout_marginTop="-1dp"
                        android:background="@drawable/line_green"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/interfacemedium"
                            android:text="@string/total_denda"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/totaldenda"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="Rp. 0"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </RelativeLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--batashistory-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardakun"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:visibility="gone"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp"
                android:layout_marginTop="3dp"
                android:layout_below="@id/cardViewlibrary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/green"
                        android:fontFamily="@font/interfacemedium"
                        android:text="Riwayat Peminjaman"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KODE \nITEM"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_marginStart="25dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/proximanovaregular"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TANGGAL \n PINJAM"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:textAlignment="center"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/black"
                            android:fontFamily="@font/proximanovaregular"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BUKU \nDIKEMBALIKAN"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/black"
                            android:fontFamily="@font/proximanovaregular"/>
                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycle_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp" />
                    <!--                tools:listitem="@layout/activity_adapter_tampi_data"-->


                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl_include"
                android:visibility="gone"
                android:layout_below="@+id/cardakun">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">
                    <include layout="@layout/includeloanlist" />
                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl_relative"
                android:layout_below="@+id/rl_include">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rc_listloan"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>


            <Button
                android:id="@+id/cekLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_relative"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="37dp"
                android:layout_marginEnd="37dp"
                android:layout_marginBottom="37dp"
                android:background="@drawable/btn_katalog"
                android:fontFamily="@font/interfacemedium"
                android:text="@string/login"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_exit_to_app_24"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/logout"
                android:layout_marginEnd="17dp"
                android:layout_marginTop="17dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logout"
                android:text="@string/logout"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"/>
        </RelativeLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/float_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/floating_refreshakun"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_baseline_border_color_24" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_refreshakun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="7dp"
        android:src="@drawable/ic_baseline_refresh_24" />
</RelativeLayout>
