<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="150dp"
    tools:context=".Adapter.Adapter_Galeri_Home">
    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        app:cardCornerRadius="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_galeri"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#EEEEEE"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_galeri"
                android:visibility="gone"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:background="@color/gray"
                android:layout_alignParentBottom="true"
                android:id="@+id/judul_galeri"
                android:fontFamily="@font/interfacemedium"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/kategori_galeri"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/judul_galeri"
                android:layout_alignStart="@+id/judul_galeri"
                android:layout_marginBottom="3dp"
                android:background="@color/gray"
                android:fontFamily="@font/proximanovaregular" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>