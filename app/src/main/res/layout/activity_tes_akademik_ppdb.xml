<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context=".Ui.ppdb.TesAkademik_PPDB">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/icon"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tx_title_akdm"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="23sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/tv_desc_akdm"
        android:layout_marginBottom="3dp"
        android:textStyle="bold"
        android:id="@+id/tx_title_akdm"
        android:textColor="@color/Red"
        android:fontFamily="@font/interfacemedium"
        android:text="TES AKADEMIK"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_home"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/interfacemedium"
        android:text="Silakan klik Simulasi Ujian untuk mengetahui gambaran pelaksanaan ujian. Jika soal tidak muncul, mohon periksa koneksi internet Anda."
        android:id="@+id/tv_desc_akdm"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_home"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <androidx.cardview.widget.CardView
            android:layout_width="300px"
            android:layout_height="300px"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp"
            android:layout_marginBottom="3dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/cv_akdm">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blue">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/interfacemedium"
                    android:text="SIMULASI \nUJIAN"
                    android:id="@+id/sim_ujian"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:textColor="@color/white"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="300px"
            android:layout_height="300px"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp"
            android:id="@+id/cv_ujianakdm"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/cv_akdm"
            android:layout_centerHorizontal="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/green">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/interfacemedium"
                    android:text="MULAI\nUJIAN"
                    android:id="@+id/sim_ujian"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:textColor="@color/white"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_home"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="System Keamanan 1.0"/>




</RelativeLayout>