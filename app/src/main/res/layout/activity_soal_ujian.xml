<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEEEE"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/toolbarujian"
        android:background="#f9853f">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="@font/fontsfreenetmasivablack"
                android:textColor="@color/white"
                android:layout_marginStart="30dp"
                android:id="@+id/titleUjian"
                android:text="Bahasa Indonesia"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="@font/proximanovaregular"
                android:textColor="@color/white"
                android:layout_marginTop="-3dp"
                android:layout_marginStart="30dp"
                android:layout_below="@+id/titleUjian"
                android:id="@+id/titleGuru"
                android:text="Ainal Badri, S.Pd"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@font/fontsfreenetmasivablack"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:id="@+id/Save"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:text="SAVE"/>
    </RelativeLayout>
    <WebView
        android:layout_width="match_parent"
        android:layout_below="@id/toolbarujian"
        android:layout_height="wrap_content"
        android:layout_above="@id/coordinatorlayout"
        android:id="@+id/webUjian"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Mulai Ujian"
            android:textColor="@color/white"
            android:background="@drawable/login_button"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/startUjian"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/done_ujian"
            android:visibility="gone"
            android:src="@drawable/icon_done"
            android:contentDescription="@string/todo" />
    </RelativeLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/coordinatorlayout"
        android:layout_alignParentBottom="true">
        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottomAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:backgroundTint="#f9853f"
            app:fabCradleRoundedCornerRadius="50dp"
            app:fabAlignmentMode="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal">
                <include layout="@layout/navigation_bar" />
            </LinearLayout>
        </com.google.android.material.bottomappbar.BottomAppBar>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/refresh2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:elevation="4dp"
            app:backgroundTint="@color/purple_200"
            android:tint="@color/purple_700"
            app:fabSize="normal"
            app:layout_anchor="@+id/bottomAppBar"
            app:srcCompat="@drawable/ic_baseline_refresh_24"
            tools:ignore="ContentDescription"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>
